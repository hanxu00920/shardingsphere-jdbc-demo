<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<!--mybatis代码生成工具 配置文件 -->
<generatorConfiguration>

	<!--这里需要制定的是本机的数据源驱动地址 -->
	<classPathEntry
		location="/Users/hanxu/.m2/repository/org/postgresql/postgresql/42.2.2/postgresql-42.2.2.jar" />

	<context id="default" targetRuntime="MyBatis3">

		<!-- optional，旨在创建class时，对注释进行控制 -->
		<commentGenerator>
			<property name="suppressDate" value="true" />
			<property name="suppressAllComments" value="true" />
		</commentGenerator>

		
		<jdbcConnection driverClass="org.postgresql.Driver"
			connectionURL="jdbc:postgresql://hxvm1:5432/postgres"
			userId="postgres" password="">
		</jdbcConnection>


		<!-- 非必需，类型处理器，在数据库类型和java类型之间的转换控制 -->
		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>


		<!--实体类生成 -->
		<javaModelGenerator
			targetPackage="com.example.demo.trade.entity" targetProject="src/main/java">

			<!-- 是否允许子包，即targetPackage.schemaName.tableName -->
			<property name="enableSubPackages" value="false" />
			<!-- 是否对model添加 构造函数 -->
			<property name="constructorBased" value="true" />
			<!-- 是否对类CHAR类型的列的数据进行trim操作 -->
			<property name="trimStrings" value="true" />
			<!-- 建立的Model对象是否 不可改变 即生成的Model对象不会有 setter方法，只有构造方法 -->
			<property name="immutable" value="false" />
		</javaModelGenerator>

		<!--sqlmap生成 -->
		<sqlMapGenerator targetPackage="mapper"
			targetProject="src/main/resources">
			<property name="enableSubPackages" value="false" />
		</sqlMapGenerator>

		<!-- dao生成 type="ANNOTATEDMAPPER",生成Java Model 和基于注解的Mapper对象 type="MIXEDMAPPER",生成基于注解的Java 
			Model 和相应的Mapper对象 type="XMLMAPPER",生成SQLMap XML文件和独立的Mapper接口 -->
		<javaClientGenerator
			targetPackage="com.example.demo.post.trade.dao" targetProject="src/main/java"
			type="XMLMAPPER">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>


		<table tableName="cd_order_info" domainObjectName="OrderInfo"
			enableCountByExample="true" enableUpdateByExample="false"
			enableDeleteByExample="false" enableSelectByExample="true"
			selectByExampleQueryId="ture">
		</table>
		<table tableName="cd_trans_serial_info" domainObjectName="TransSerialInfo"
			enableCountByExample="true" enableUpdateByExample="false"
			enableDeleteByExample="false" enableSelectByExample="true"
			selectByExampleQueryId="ture">
		</table>
		<table tableName="cd_mer_info" domainObjectName="MerInfo"
			enableCountByExample="true" enableUpdateByExample="false"
			enableDeleteByExample="false" enableSelectByExample="true"
			selectByExampleQueryId="ture">
		</table>

	</context>
</generatorConfiguration>